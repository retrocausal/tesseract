{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": ".",
    "outDir": "../dist/common-structures",
    
    /* THE FIX: Anchor locally and look UP for the sibling */
    "baseUrl": ".",
    "paths": {
      /* Map the alias to the sibling folder */
      "@common-types/*": ["../types/*"]
    }
  },
  "include": ["**/*.ts"],
  
  /* THE FIX: Build 'types' before building 'structures' */
  "references": [
    { "path": "../types" }
  ]
}