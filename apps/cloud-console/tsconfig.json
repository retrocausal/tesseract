{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,

    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist-types",

    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      /* 1. MISSING LINK: Map the shared library alias */
      "@common-struct/*": ["../../structures/*"],
      "@common-types/*": ["../../types/*"],

      /* Local Mappings */
      "@cloud/*": ["src/*"],
      "@cloud/utils/*": ["src/utils/*"],
      "@cloud/modules/*": ["src/modules/*"],
      "@cloud/types/*": ["types/*"],
      "@cloud/mocks/*": ["mocks/*"]
    },
    "types": ["vite/client", "node"]
  },
  "include": ["src", "types", "mocks", "vite.config.ts"],
  /* 2. MISSING LINK: Explicitly depend on the structure project */
  "references": [{ "path": "../../structures" }, { "path": "../../types" }]
}
