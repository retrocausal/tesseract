{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,

    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      /* 1. MISSING LINK: Map the shared library alias */
      "@tesseract/platform/*": ["../../platform/*"],
      "@tesseract/schema": ["../../schema/index.ts"],

      /* Local Mappings */
      "@cloud/*": ["src/*"],
      "@cloud-utils/*": ["src/utils/*"],
      "@cloud-modules/*": ["src/modules/*"],
      "@cloud-mocks/*": ["mocks/*"],
      "@cloud-router/*": ["router/*"],
      "@cloud-constants/*": ["constants/*"]
    },
    "types": ["vite/client", "node"]
  },
  "include": ["src", "types", "mocks", "router", "constants", "vite.config.ts"],
  /* Explicitly depend on the platform project */
  "references": [{ "path": "../../platform" }, { "path": "../../schema" }]
}
