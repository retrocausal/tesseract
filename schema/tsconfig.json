{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "allowImportingTsExtensions": false,

    // BASE URL is required for 'paths' to work
    "baseUrl": ".",

    // MAPPING
    "paths": {
      "@platform/*": ["../platform/*"],
      "@schema/*": ["./*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../platform" }]
}
