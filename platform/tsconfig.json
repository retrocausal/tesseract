{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": ".",
    "outDir": "../dist/platform",
    /* We don't need paths here, as it doesn't depend on apps */
    "baseUrl": ".",
    "paths": {
      "@platform-types/*": ["types/*"]
    }
  },
  "include": ["types", "structures"]
}
